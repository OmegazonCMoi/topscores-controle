{% extends 'base.html.twig' %}

{% block title %}Hello StreamsDemainController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

    <h1>Les streams de demain !</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Url</th>
            <th>User</th>
            <th>Date</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for stream in streams %}
            <tr>
                <td>{{ stream.id }}</td>
                <td><a href="{{ stream.url }}"><button class="btn btn-primary">URL du stream</button></a></td>
                <td>{{ stream.user.pseudo }}</td>
                <td>{{ stream.date ? stream.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_streams_show', {'id': stream.id}) }}">show</a>
                    <a href="{{ path('app_streams_edit', {'id': stream.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
